<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand"><span>LOGO</span></a>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
              <li><%= link_to "商品一覧", admin_items_path, class: 'fas fa-home nav-link text-light' %></li>
              <li><%= link_to "会員一覧", admin_customers_path, class: 'fas fa-users nav-link text-light' %></li>
              <li><%= link_to "注文履歴一覧", admin_top_path, class: 'fas fa-book-open nav-link text-light' %></li>
              <li><%= link_to "ジャンル一覧", admin_genres_path, class: 'fas fa-book-open nav-link text-light' %></li>
              <li><%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-light' %></li>
              <% else %>
              <li><%= link_to "About", about_path, class: 'fas fa-link nav-link text-light' %></li>
              <li><%= link_to "商品一覧", items_path, class: 'fas fa-home nav-link text-light' %></li>
              <li><%= link_to "新規登録", new_customer_registration_path, class: 'fas fa-user-plus nav-link text-light' %></li>
              <li><%= link_to "ログイン", new_customer_session_path, class: 'fas fa-sign-in-alt nav-link text-light' %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>

    </header>
    <%= yield %>
  </body>
</html>
