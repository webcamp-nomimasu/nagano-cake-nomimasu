<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand"><span>LOGO</span></a>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

            <li class="nav-item">
              <%= link_to " 商品一覧", admin_items_path, class: 'fas fa-home nav-link text-light' %>
            </li>
            <li>
              <%= link_to ' 会員一覧', admin_customers_path, class: 'fas fa-users nav-link text-light' %>
            </li>
            <li>
              <%= link_to ' 注文履歴一覧', admin_top_path, class: 'fas fa-book-open nav-link text-light' %>
            </li>
            <li>
              <%= link_to " ジャンル一覧", admin_genres_path, class: 'fas fa-sign-out-alt nav-link text-light' %>
            </li>
            <li>
              <%= link_to ' ログアウト', destroy_admin_session_path, method: :delete, class: 'fas fa-sign-out-alt nav-link text-light' %>
            </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <%= yield %>

    <footer class="fixed-bottom">
      <div class="d-flex align-items-center justify-content-center bg-dark text-white" style="height: 40px;">
        &copy; nomimasu?
      </div>
    </footer>
  </body>
</html>
