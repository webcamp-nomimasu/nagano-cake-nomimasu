<div class="container">
  <h3><%= @customer.family_name %><%= @customer.given_name %>さんの会員詳細</h3>
    <div class="row">
    <table class='table  table-inverse'>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.family_name %><%= @customer.given_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.kana_family_name %><%= @customer.kana_given_name %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
        <tr>
        <td>住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
          <td>会員ステータス</td>
          <td><% if @customer.is_deleted == true %>
               <p class="text-secondary">退会</p>
              <% else %>
                <p class="text-success">有効</p>
             <% end %>
          </td>
        </tr>
      </table>
    <div>
      <%= link_to "編集する", edit_admin_customer_path,class: 'btn btn-sm btn-success' %>
      <%= link_to "注文履歴一覧", admin_top_path,class: 'btn btn-sm btn-primary' %>
    </div>
  </div>
</div>