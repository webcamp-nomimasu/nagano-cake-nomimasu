<div class="container">
  <div class="row">
    <h3 class="text-left">会員一覧</h3>
    <table class="table table-hover table-inverse">
      <thead class="thead-light">
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>

      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td class="col">
              <%= customer.id %>
            </td>
            <td class="col">
              <%= link_to admin_customer_path(customer), class: "btn-link" do %>
                <%= customer.family_name%>
                <%= customer.given_name%>
              <% end %>
            </td>
            <td class="col">
              <%= customer.email %>
            </td>
            <td class="col">
              <% if customer.is_deleted == true%>
                <p class="text-secondary">退会</p>
              <% else %>
                <p class="text-success">有効</p>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
    <div><%= paginate(@customers) %></div>
</div>