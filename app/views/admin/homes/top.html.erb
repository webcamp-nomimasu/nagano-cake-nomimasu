<div class="container mt-3">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h3>注文履歴一覧</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto mt-3">
      <table class="table  table-hover">
        <thead class="table-active">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S').to_s, admin_order_path(order) %></td>
            <td><%= order.customer.family_name + order.customer.given_name %></td>
            <td><%= order.order_items.sum(:amount) %></td>
            <td><%= order.status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center"><%= paginate(@orders) %></div>
    </div>
  </div>
</div>