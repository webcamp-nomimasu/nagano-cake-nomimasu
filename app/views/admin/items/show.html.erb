<div class="container mt-3">
  <div class="mx-auto col-lg-12">
    <div class="row">
      <div class="col-10 offset-1">
        <h3 class="page-title">商品詳細</h3>
      </div>
    </div>
  
    <div class="row">
      <div class="col">
        <%= attachment_image_tag @item, :image, size: "400x300", fallback: "no_image.jpg", class: "img-fluid" %>
      </div>
      <div class="col">
        <table class="table table-borderless">
          <tr>
            <th style="width: 40%">商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @item.information %></td>
          </tr>
           <tr>
            <th>アレルギー</th>
            <td><%= @item.allergies %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <th>税込価格<br>(税抜価格)</th>
            <td><%= ( @item.price * 1.1 ).floor.to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円</td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td>
              <% if @item.is_active %>
              <div class="text-success">販売中</div>
              <% else %>
              <div class="text-secondary">販売停止中</div>
              <% end %>
            </td>
          </tr>
        </table>
        <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-success" %>
      </div>
    </div>
  </div>

</div>

