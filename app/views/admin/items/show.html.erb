<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-2">
      <h3 class="page-title">商品詳細</h3>
    </div>
  </div>
  
  <div class="row">
    
    <div class="col">
      <%= attachment_image_tag @item, :image, :fill, 30, 30, fallback: "no_image.jpg" %>
    </div>
    <div class="col">
      <div class="form-group form-inline">
        <div>商品名</div>
        <div class="ml-5 pl-3"><%= @item.name %></div>
      </div>
      <div class="form-group form-inline">
        <div>商品説明</div>
        <div class="ml-5 pl-3"><%= @item.information %></div>
      </div>
      <div class="form-group form-inline">
        <div>ジャンル</div>
        <div class="ml-5 pl-3"> <%= @item.genre.name %></div>
      </div>
      <div class="form-group form-inline">
        <div>税抜価格</div>
        <div class="ml-5 pl-3"><%= ( @item.price * 1.1 ).to_s(:delimited) %> (<%= @item.price.to_s(:delimited) %>) 円</div>
        </div>

      <div class="form-group form-inline">
        <div>販売ステータス</div>
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active, "販売中", {value: :true, style: "display: inline-block;"} %>
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %>
      </div>
    </div>
  </div>

</div>

