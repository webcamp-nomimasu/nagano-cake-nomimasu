<div class="container mt-3">
  <div class="row mb-3">
    <div class="col-md-8 mx-auto">
      <h3>商品一覧</h3>
    </div>
    <div class="col-md-2" >
      <%= link_to '', new_admin_item_path, class: "fas fa-plus-circle fa-3x add-item" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto">
      <div class="items-all">
        <table class="table">
          <thead class="table-active">
            <tr>
              <th style="width: 10%">商品ID</th>
              <th style="width: 30%">商品名</th>
              <th style="width: 10%">税抜価格</th>
              <th style="width: 30%">ジャンル</th>
              <th style="width: 20%">ステータス</th>
            </tr>
          </thead>
          <tbody>
            <%= render 'index', items: @items %>
          </tbody>
        </table>
      </div>
      <div class="d-flex justify-content-center"><%= paginate(@items) %></div>
    </div>
  </div>
</div>