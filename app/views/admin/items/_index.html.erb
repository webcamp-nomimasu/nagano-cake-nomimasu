<% items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td><%= link_to item.name, admin_item_path(item) %></td>
    <td><%= item.price.to_s(:delimited) %></td>
    <td><%= item.genre.name %></td>
    <td><%= item.allergies %></td>
    <% if item.is_active %>
      <td class="text-success">販売中</td>
    <% else %>
      <td class="text-secondary">販売停止中</td>
    <% end %>
    <td>
      <%= link_to item_comments_path(item) do%>
        <%= item.comments.count %>
      <% end %>
    </td>
  </tr>
<% end %>