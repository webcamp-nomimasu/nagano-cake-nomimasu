<div class="container">
  <div class="row mt-3">
    <div class="col-lg-10 mx-auto">
      <h2>会員情報編集</h2>
        <%= form_with model: @customer, url: customers_path, local: true do |f| %>
          <div class="form-group">
            <%= f.label "名前", class: "col-3 mt-5" %>
            <%= f.label "(姓)　　　" %>
            <%= f.text_field :family_name, autofocus: true, placeholder: "令和", class: "form-control-sm col-3" %>
            <% if @customer.errors.include?(:family_name) %>
              <p style="color: red;"><%= @customer.errors.full_messages_for(:family_name).first %>
            <% end %>
            <%= f.label "　(名)　　"  %>
            <%= f.text_field :given_name, autofocus: true, placeholder: "道子", class: "form-control-sm col-3" %>
            <% if @customer.errors.include?(:given_name) %>
              <p style="color: red;"><%= @customer.errors.full_messages_for(:given_name).first %>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label "フリガナ", class: "col-3 mt-2"%>
            <%= f.label "(セイ)　　" %>
            <%= f.text_field :kana_family_name, autofocus: true, placeholder: "レイワ", class: "form-control-sm col-3" %>
            <% if @customer.errors.include?(:kana_family_name) %>
              <p style="color: red;"><%= @customer.errors.full_messages_for(:kana_family_name).first %>
            <% end %>
            <%= f.label "　(メイ)　"  %>
            <%= f.text_field :kana_given_name, autofocus: true, placeholder: "ミチコ", class: "form-control-sm col-3" %>
            <% if @customer.errors.include?(:kana_given_name) %>
              <p style="color: red;"><%= @customer.errors.full_messages_for(:kana_given_name).first %>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label "メールアドレス", class: "col-4 mt-2" %>
            <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class: "form-control-sm col-3" %>
            <% if @customer.errors.include?(:email) %>
              <p style="color: red;"><%= @customer.errors.full_messages_for(:email).first %>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label "郵便番号(ハイフンなし)", class: "col-4 mt-2" %>
            <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000", class: "form-control-sm col-3" %>
            <% if @customer.errors.include?(:family_name) %>
              <p style="color: red;"><%= @customer.errors.full_messages_for(:postal_code).first %>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label "住所", class: "col-4 mt-2" %>
            <%= f.text_field :address, autofocus: true, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control-sm col-7" %>
            <% if @customer.errors.include?(:address) %>
              <p style="color: red;"><%= @customer.errors.full_messages_for(:address).first %>
            <% end %>
          </div>

          <div class="form-group">
            <%= f.label "電話番号（ハイフンなし）", class: "col-4 mt-2" %>
            <%= f.text_field :phone_number, autofocus: true, placeholder: "0000000000", class: "form-control-sm col-3" %>
            <% if @customer.errors.include?(:phone_number) %>
              <p style="color: red;"><%= @customer.errors.full_messages_for(:phone_number).first %>
            <% end %>
          </div>

          <div class="actions text-center">
            <%= f.submit "編集内容を保存", class: "btn btn-success col-4 mt-2" %>
            <%= link_to "退会する", customers_unsubscribe_path, class: "btn btn-danger col-2 ml-5" %>
          </div>
        <% end %>
    </div>
  </div>
</div>