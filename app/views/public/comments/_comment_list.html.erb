<table>
    <% item.comments.each do |comment| %>
    <tbody>
      <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= comment.comment %></td>
      <td>
        <% if comment.customer == current_customer %>
          <%= link_to 'Destroy', item_comment_path(comment.item, comment), class: 'btn-sm btn-danger', method: :delete, remote:true %>
        <% end %>
      <td>
    </tbody>
    <% end %>
</table>

<% if customer_signed_in? %>
  <%= form_with model:[item, comment] do |f| %>
    <div class="col mb-2 mt-5 text-center">
      <%= f.text_area :comment, placeholder: "comment", size: "30", class: "form-control" %>
    </div>
    <div class="col mb-2 mt- mb-3">
      <%= f.submit "投稿", class: "btn btn-success col-4 mt-2" %>
    </div>
  <% end %>
<% end %>