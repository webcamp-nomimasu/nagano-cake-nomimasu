<div class="container">
  <div class="col-md-10 offset-1">
    <div class="mt-3">
      <h3>配送先編集</h3>
    </div>
    <div class="row mx-auto mt-5">
      <%= form_with model: @address, local: true do |f| %>
      <div class="form-group">
        <label for="郵便番号", class="d-block">郵便番号(ハイフンなし)</label>
        <%= f.text_field :postal_code, autofocus: true %>
      </div>
      <div class="form-group">
        <label for="住所", class="d-block">住所</label>
        <%= f.text_field :address %>
      </div>
      <div class="form-group">
        <label for="宛名", class="d-block">宛名</label>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.submit "変更内容を保存", class: "btn btn-success" %>
      </div>
      <% end %>
    </div>
  </div>
</div>