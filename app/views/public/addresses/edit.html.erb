<div class="container">
  <div class="row">
    <%= form_with model: @address, local: true do |f| %>
    <div class="form-group">
      <label for="郵便番号">郵便番号(ハイフンなし)</label>
      <%= f.text_field :postal_code, autofocus: true %>
    </div>
    <div class="form-group">
      <label for="住所">住所</label>
      <%= f.text_field :address %>
    </div>
    <div class="form-group">
      <label for="宛名">宛名</label>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>