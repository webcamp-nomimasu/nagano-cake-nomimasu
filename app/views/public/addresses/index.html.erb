<div class="container">
  <div class="row">
    <h3>配送先登録/一覧</h3>
    <!--新規登録フォーム-->
    <div class="col-md-10 address-new">
      <%= form_with model: @address, local: true do |f| %>
        <div class="form-group">
          <label for="郵便番号">郵便番号(ハイフンなし)</label>
          <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %>
        </div>
        <div class="form-group">
          <label for="住所">住所</label>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>
        <div class="form-group">
          <label for="宛名">宛名</label>
          <%= f.text_field :name, placeholder: "令和道子" %>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>

    <!--一覧-->
    <div class="col-md-10 address-index">
      <% if @addresses.empty? %>
        <h4>登録された配送先はありません。</h4>
      <% else %>
        <table>
          <thead>
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
              <tr>
                <td><%= address.postal_code %></td>
                <td><%= address.address %></td>
                <td><%= address.name %></td>
                <td>
                  <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
                  <%= link_to "削除する", addresses_path(address, method: :delete, data:{ confirm: "本当に削除しますか？" }, class: "btn btn-danger") %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>