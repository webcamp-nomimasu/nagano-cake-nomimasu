<div class="container">
  <div class="row mt-5 mb-5">
    <div class="col-md-8 mx-auto">

        <table class="table">
          <tr>
            <th>名前</th>
              <td><%= @contact.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
              <td><%= @contact.email %></td>
          </tr>
          <tr>
            <th>電話番号</th>
              <td><%= @contact.phone_number %></td>
          </tr>
          <tr>
            <th>お問い合わせ用件</th>
              <td><%= @contact.subject %></td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
              <td><%= @contact.message %></td>
          </tr>
        </table>
        
          <%= form_with model:@contact, url: contacts_back_path, method: :post, local: true do |f| %>
            <%= f.hidden_field :name %>
            <%= f.hidden_field :email %>
            <%= f.hidden_field :phone_number %>
            <%= f.hidden_field :subject %>
            <%= f.hidden_field :message %>
            <%= f.submit '入力画面に戻る', class: 'btn btn-outline-secondary col-4 mr-3'%>
          <% end %>
          

          <%= form_with model:@contact, url: contacts_path, method: :post, local: true do |f| %>
            <%= f.hidden_field :name %>
            <%= f.hidden_field :email %>
            <%= f.hidden_field :phone_number %>
            <%= f.hidden_field :subject %>
            <%= f.hidden_field :message %>
            <%= f.submit '送信', class: 'btn btn-outline-success col-4 mr-3'%>
          <% end %>  
        
    </div>
  </div>
</div>
