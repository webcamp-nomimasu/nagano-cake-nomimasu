<% items.each do |item| %>
  <div class="card border-0">
    <div class="card-img-top">
      <%= link_to item_path(item.id) %>
      <%= attachment_image_tag item, :image, format: "jpeg", size: "200x150", class: "img-fluid" %>
    </div>
    <div class="card-body">
      <p class="card-title">
        <%= item.name %>
      </p>
      <!--販売ステータスで表記を変える-->
      <% if item.is_active == true %>
        <p class="card-text">
          ¥<%= (item.price * 1.1).to_s(:delimited) %>
          <!--:delimited で三桁区切り-->
        </p>
      <% else %>
        <p class="card-text">
          売り切れ中
        </p>
      <% end %>
    </div>
  </div>
<% end %>