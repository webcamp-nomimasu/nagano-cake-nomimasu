<div class="container">
  <div class="row mt-3 mb-5">
    <div class="col-lg-10 offset-1">

      <h2>注文情報入力</h2>
      </br></br>

      <%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>

      <h5>支払方法</h5>
        <div class="paymethod-select">
          <%= f.radio_button :payment_method, :クレジットカード, checked: true %>
          <%= f.label :payment_method, "クレジットカード", value: :クレジットカード %>
          </br>
          <%= f.radio_button :payment_method, :銀行振込 %>
          <%= f.label :payment_method, "銀行振込", value: :銀行振込 %>
        </div>
        </br></br>
      <h5>お届け先</h5>
        <div class="form-group">
          <%= f.radio_button :address_option, 0, checked: true %>
          <%= f.label :address_option, "ご自身の住所", value: 0 %></br>
          &emsp;<%= "〒" + "#{ current_customer.postal_code }" + " " + "#{ current_customer.address }" %>
          &emsp;<%= "#{ current_customer.family_name } #{ current_customer.given_name }" %>
          </br>
          <% if @addresses != [] %>
            <%= f.radio_button :address_option, 1 %>
            <%= f.label :address_option, "登録済住所から選択", value: 1 %></br>
            <!--order_address：address.rbに表記 -->
            <%= f.collection_select :address_id, @addresses, :id, :order_address, { class: "form-control" } %>
          <% end %>
          </br>
          <%= f.radio_button :address_option, 2 %>
          <%= f.label :address_option, "新しいお届け先", value: 2 %>
          </br>
          <%= f.label :postal_code, "郵便番号（ハイフンなし）", class: "col-4 mt-2" %>
          <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control-sm col-3" %></br>
          <%= f.label :address, "住所", class: "col-4 mt-2" %>
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control-sm col-3" %></br>
          <%= f.label :name, "宛名", class: "col-4 mt-2" %>
          <%= f.text_field :name, placeholder: "令和道子", class: "form-control-sm col-3" %></br></br>
          <div class="actions text-center">
          <%= f.submit "確認画面へ進む", class: "btn btn-primary col-3 mt-2" %>
          </div>
      <% end %>

    </div>
  </div>
</div>