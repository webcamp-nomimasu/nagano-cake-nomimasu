<div class="container pt-5 pb-5">
  <div class="row mt-5 mb-5">
    <div class="col">
      <h2>注文履歴一覧</h2>
      <table class="table-bordered">
        <thead class="">
          <tr align="center">
            <th class="table-active col-1">注文日</th>
            <th class="table-active col-3">配送先</th>
            <th class="table-active col-3">注文商品</th>
            <th class="table-active col-1">支払金額</th>
            <th class="table-active col-2">ステータス</th>
            <th class="table-active col-2">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr align="center">
              <td class=""><%= order.created_at.strftime("%Y/%m/%d") %></td>
                             <!--floor：小数点の切り捨て、:delimitedは3桁区切り-->
              <!--<td class=""><%#= (cart.item.price * 1.1).floor.to_s(:delimited) %></td>-->
              <!--tax_included_price：order.rbで定義-->
              <td class=""><%= order.postal_code %></br><%= order.address %></br><%= order.name %></td>
              <td class="">
                <% order.order_items.each do |order_item| %>
                  <%= order_item.item.name %><br />
                <% end %></td>
              <td class="">¥<%= order.total_price.to_s(:delimited) %></td>
              <td class=""><%= order.status %></td>
              <td class=""><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>